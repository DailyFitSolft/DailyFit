<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goal_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacgroundColor1"
    android:backgroundTint="@color/bacgroundColorTint">

    <CheckBox
        android:id="@+id/is_goal_achived"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:checked="false"
        android:clickable="false"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:scrollbarSize="4sp"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/goalProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="95dp"
        android:maxWidth="200dip"
        android:maxHeight="25dip"
        android:minWidth="200dip"
        android:minHeight="25dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/name_of_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/nameofgoal"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notsucceded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/notsucceded"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goal_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_goal"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/goalenddate"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/maxValueProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_toRightOf="@id/goalProgressBar"
        android:text="@string/maxvalueprogress"
        android:textSize="13sp" />

</RelativeLayout>